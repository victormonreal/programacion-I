int IngresaDatos(){
	int year; 
	limpia();
	marco();
	gotoxy(6,13);
	printf("Ingrese el aÃ±o para la evaluaci%cn:",162);
	gotoxy(41,13);
	scanf("%d",&year);
	return year;
}
int Evaluar(int year){
	int Modulo1,Modulo2,Modulo3;
	Modulo1 = year % 400;
	Modulo2 = year % 100;
	Modulo3 = year % 4;
	if(Modulo1 == 0){
		return 1;
	}else{		
		if(Modulo2 != 0 && Modulo3 == 0){
			return 1;
		}else{
			return 2;
		}
		
	}
}
