int gotoxy(int x, int y){
	HANDLE hcon;
	hcon = GetStdHandle(STD_OUTPUT_HANDLE);
	COORD dwPos;
	dwPos.X = x;
	dwPos.Y = y;
	SetConsoleCursorPosition(hcon,dwPos);
	return 0;
}
int limpia(){
	system("cls");
	system("Color 0a");
	return 0;
}
int marco(){
	int x, y;
	for(x=1;x<40;x++)
	{
		gotoxy(x + 40,1);
		printf("%c",205);
		gotoxy(41-x,1);
		printf("%c",205);
		gotoxy(x + 40,25);
		printf("%c",205);
		gotoxy(41-x,25);
		printf("%c",205);
		sleep(0);
	};
	gotoxy(1,1);
	printf("%c",201);
	gotoxy(80,1);
	printf("%c",187);
	gotoxy(1,25);
	printf("%c",200);
	gotoxy(80,25);
	printf("%c",188);
	for(y=1;y<13;y++)
	{
		gotoxy(1,y+1);
		printf("%c",186);
		gotoxy(80,y+1);
		printf("%c",186);
		gotoxy(1,25-y);
		printf("%c",186);
		gotoxy(80,25-y);
		printf("%c",186);
		sleep(0);
	};
	return 0;
}
